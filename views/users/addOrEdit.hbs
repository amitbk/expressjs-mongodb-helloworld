<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 py-4">

          <div class="card">
            <div class="card-header">{{viewTitle}}</div>
            <div class="card-body">
              <form class="" action="/users" method="post">

                  <div class="form-group">
                    <label for="name">Name</label>
                    <input id="name" type="text" name="name" value="" class="form-control" placeholder="Name">
                  </div>

                  <div class="form-group">
                    <label for="email">Email</label>
                    <input id="email" type="email" name="email" value="" class="form-control" placeholder="Email">
                  </div>

                  <div class="form-group">
                    <label for="mobile">Mobile</label>
                    <input id="mobile" type="mobile" name="mobile" value="" class="form-control" placeholder="Mobile">
                  </div>

                  <div class="form-group">
                    <label for="city">City</label>
                    <input id="city" type="city" name="city" value="" class="form-control" placeholder="City">
                  </div>

                  <div class="form-group">
                    <button type="submit" class="btn btn-success" name="button">Submit</button>
                  </div>
              </form>



            </div>
          </div>


        </div>
    </div>
</div>
